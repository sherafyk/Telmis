# Timezone and permissions (LinuxServer containers)
TZ=America/Los_Angeles
PUID=1000
PGID=1000
UMASK=022

# Host paths (use absolute paths)
CONFIG_DIR=/opt/media-server/config
DATA_DIR=/data

# UI ports
EMBY_HTTP_PORT=8096
SONARR_PORT=8989
RADARR_PORT=7878
PROWLARR_PORT=9696
QBITTORRENT_WEBUI_PORT=8080
QBITTORRENT_PORT=6881
JACKETT_PORT=9117

# VPN (NordVPN)
# Nord uses service credentials from your account dashboard.
VPN_TYPE=openvpn
NORDVPN_USER=
NORDVPN_PASSWORD=
# WireGuard settings only apply when VPN_TYPE=wireguard
NORDVPN_WIREGUARD_PRIVATE_KEY=
NORDVPN_WIREGUARD_ADDRESSES=
VPN_SERVER_COUNTRIES=United States

# DATA_DIR must contain:
# /data/media/movies
# /data/media/tv
# /data/torrents/incomplete
# /data/torrents/complete

# Optional override for scripts/print-urls.sh
# HOSTNAME_OVERRIDE=media-box
